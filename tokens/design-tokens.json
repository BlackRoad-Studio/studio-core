{
  "$schema": "https://design-tokens.github.io/community-group/format/",
  "meta": {
    "name": "BlackRoad OS Design Tokens",
    "version": "1.0.0",
    "description": "Single source of truth for all BlackRoad OS visual properties"
  },
  "color": {
    "brand": {
      "amber":         { "value": "#F5A623", "description": "Primary brand amber" },
      "hot-pink":      { "value": "#FF1D6C", "description": "Primary action color" },
      "electric-blue": { "value": "#2979FF", "description": "Interactive / link color" },
      "violet":        { "value": "#9C27B0", "description": "Agent / AI accent" }
    },
    "neutral": {
      "black":   { "value": "#000000" },
      "white":   { "value": "#FFFFFF" },
      "zinc-50": { "value": "#FAFAFA" },
      "zinc-100":{ "value": "#F4F4F5" },
      "zinc-200":{ "value": "#E4E4E7" },
      "zinc-300":{ "value": "#D4D4D8" },
      "zinc-400":{ "value": "#A1A1AA" },
      "zinc-500":{ "value": "#71717A" },
      "zinc-600":{ "value": "#52525B" },
      "zinc-700":{ "value": "#3F3F46" },
      "zinc-800":{ "value": "#27272A" },
      "zinc-900":{ "value": "#18181B" },
      "zinc-950":{ "value": "#09090B" }
    },
    "semantic": {
      "success": { "value": "#22C55E" },
      "warning": { "value": "#F59E0B" },
      "error":   { "value": "#EF4444" },
      "info":    { "value": "#3B82F6" }
    },
    "agent": {
      "lucidia": { "value": "#9400D3", "description": "LUCIDIA reasoning agent" },
      "alice":   { "value": "#0047AB", "description": "ALICE executor agent" },
      "octavia": { "value": "#FF4500", "description": "OCTAVIA devops agent" },
      "prism":   { "value": "#00CED1", "description": "PRISM analyst agent" },
      "echo":    { "value": "#7B2FBE", "description": "ECHO memory agent" },
      "cipher":  { "value": "#444444", "description": "CIPHER security agent" }
    }
  },
  "gradient": {
    "brand": {
      "value": "linear-gradient(135deg, #F5A623 0%, #FF1D6C 38.2%, #9C27B0 61.8%, #2979FF 100%)",
      "description": "Primary brand gradient using golden ratio stops"
    },
    "dark-surface": {
      "value": "linear-gradient(180deg, #18181B 0%, #09090B 100%)"
    }
  },
  "spacing": {
    "description": "Golden ratio (φ=1.618) spacing scale",
    "xs":  { "value": "8px" },
    "sm":  { "value": "13px",  "description": "8 × φ" },
    "md":  { "value": "21px",  "description": "13 × φ" },
    "lg":  { "value": "34px",  "description": "21 × φ" },
    "xl":  { "value": "55px",  "description": "34 × φ" },
    "2xl": { "value": "89px",  "description": "55 × φ" },
    "3xl": { "value": "144px", "description": "89 × φ" }
  },
  "typography": {
    "font-family": {
      "sans": { "value": "-apple-system, BlinkMacSystemFont, 'SF Pro Display', 'Segoe UI', sans-serif" },
      "mono": { "value": "'SF Mono', 'Fira Code', 'Cascadia Code', monospace" }
    },
    "line-height": {
      "default": { "value": "1.618", "description": "Golden ratio line height" },
      "tight":   { "value": "1.25" },
      "relaxed": { "value": "2.0" }
    },
    "font-size": {
      "xs":   { "value": "12px" },
      "sm":   { "value": "14px" },
      "base": { "value": "16px" },
      "lg":   { "value": "18px" },
      "xl":   { "value": "20px" },
      "2xl":  { "value": "24px" },
      "3xl":  { "value": "30px" },
      "4xl":  { "value": "36px" }
    }
  },
  "animation": {
    "easing": {
      "default": { "value": "cubic-bezier(0.25, 0.1, 0.25, 1)" },
      "spring":  { "value": "cubic-bezier(0.175, 0.885, 0.32, 1.275)", "description": "Overshoot spring" },
      "snappy":  { "value": "cubic-bezier(0.4, 0, 0.2, 1)" }
    },
    "duration": {
      "fast":   { "value": "100ms" },
      "normal": { "value": "200ms" },
      "slow":   { "value": "300ms" },
      "pulse":  { "value": "2000ms" }
    }
  },
  "border-radius": {
    "sm":   { "value": "6px" },
    "md":   { "value": "8px" },
    "lg":   { "value": "12px" },
    "xl":   { "value": "16px" },
    "2xl":  { "value": "20px" },
    "full": { "value": "9999px" }
  },
  "shadow": {
    "sm": { "value": "0 1px 2px 0 rgba(0,0,0,0.5)" },
    "md": { "value": "0 4px 6px -1px rgba(0,0,0,0.5)" },
    "glow-violet": { "value": "0 0 20px rgba(156,39,176,0.4)" },
    "glow-pink":   { "value": "0 0 20px rgba(255,29,108,0.4)" }
  }
}
